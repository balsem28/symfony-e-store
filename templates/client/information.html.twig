{% extends 'base.html.twig' %}


{% block title %}Edit Categorie{% endblock %}

{% block body %}
<div class="na">

    <nav>




        <div class="project-name" ><a href={{ path('categorie') }}>ElectroElite</a></div>



    </nav>
</div>
    <div class="transparent-form">
        <h2>information personel</h2>
        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'name', }}) }}
        {{ form_row(form.adress, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'reference', }}) }}
        {{ form_row(form.phonNumber, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'categorie'}}) }}
        {{ form_row(form.email, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'prix'}}) }}
        <button type="submit" class="form-button">Modifier</button>
        {{ form_end(form) }}
    </div>

