{% extends 'dashboard/dashboard.html.twig' %}

{% block body %}
    <div class="n">
        <nav >
            <h4 class="f">gestion des categorie</h4>

        </nav>
    </div>

    <div class="container">
        <button class="add-button" >
            <a href="{{ path('app_categorie_new') }}"> Ajouter Categorie</a></button>
        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>type</th>
                <th>Action</th>


            </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.name }}</td>
                    <td>{{ categorie.type }}</td>

                    <td>
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}"><img src="/media/images/edit.gif"> Edit</a> <form method="post" action="{{ path('app_categorie_delete', {'id': categorie.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id) }}">
                            <button class="btn"><img src="/media/images/delete.gif">Delete</button>
                        </form>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>







    {{ parent() }}


{% endblock %}
