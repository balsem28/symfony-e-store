
{% extends 'base.html.twig' %}



{% block body %}

    <div class="transparent-form">
        <h2>Create a Category</h2>
        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'name', 'required': true}}) }}
        {{ form_row(form.type, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'type', 'required': true}}) }}
        <button type="submit" class="form-button">Ajouter</button>
        {{ form_end(form) }}
    </div>

    {# Bootstrap JS (you can use CDN or download and host it locally) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
