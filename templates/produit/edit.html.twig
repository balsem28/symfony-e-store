{% extends 'base.html.twig' %}

{% block title %}Edit Categorie{% endblock %}

{% block body %}
    <div class="transparent-form">
        <h2>Modifier Produit</h2>
        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'name', 'required': true}}) }}
        {{ form_row(form.reference, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'reference', 'required': true}}) }}
        {{ form_row(form.categorie, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'categorie', 'required': true}}) }}
        {{ form_row(form.prix, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'prix', 'required': true}}) }}
        {{ form_row(form.description, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'description', 'required': true}}) }}
        {{ form_row(form.fileName, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'fileName', 'required': true}}) }}
        <button type="submit" class="form-button">Modifier</button>
        {{ form_end(form) }}
    </div>

    {# Bootstrap JS (you can use CDN or download and host it locally) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>





{% endblock %}
