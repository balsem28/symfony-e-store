{% extends 'base.html.twig' %}



{% block body %}

    <div class="transparent-form">
        <h2>ajouter un produit</h2>
        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'name', 'required': true}}) }}
        {{ form_row(form.reference, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'type', 'required': true}}) }}
        {{ form_row(form.categorie, {'attr': {'class': 'form-select'}}) }}
        {{ form_row(form.prix, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'prix', 'required': true}}) }}
        {{ form_row(form.description, {'attr': {'label': ' ','class': 'form-input', 'placeholder': 'description', 'required': true}}) }}
        {{ form_row(form.fileName, {'attr': {'label': ' ', 'class': 'form-input-file', 'required': false}}) }}

        <button type="submit" class="form-button">Ajouter</button>
        {{ form_end(form) }}
    </div>

    {# Bootstrap JS (you can use CDN or download and host it locally) #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

{% endblock %}
