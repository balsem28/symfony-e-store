{% extends 'dashboard/dashboard.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <div class="n">
        <nav >
            <h4 class="f">gestion des Produit</h4>

        </nav>
    </div>

    <div class="container">
        <button class="add-button" >
            <a href="{{ path('app_produit_new') }}"> Ajouter Produit</a></button>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Reference</th>
                    <th>file Name</th>
                    <th>Description</th>
                    <th>prix</th>
                    <th>actions</th>



                </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>{{ produit.name }}</td>
                        <td>{{ produit.reference }}</td>
                        <td>{{ produit.fileName }}</td>
                        <td>{{ produit.description }}</td>
                        <td>{{ produit.prix }}</td>

                        <td>
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}"><img src="/media/images/edit.gif"> Edit</a> <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button class="btn"><img src="/media/images/delete.gif">Delete</button>
                            </form>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>
    {{ parent() }}









{% endblock %}
